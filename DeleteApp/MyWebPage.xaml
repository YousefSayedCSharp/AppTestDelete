<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeleteApp.MyWebPage"
             Title="MyWebPage">
    <StackLayout>
        <!-- WebView لتحميل الصفحة -->
        <WebView x:Name="MyWebView"
                 HeightRequest="400"
                 Navigating="OnNavigating"
                 Source="page.html" />

        <!-- زر لإرسال الاسم إلى h1 -->
        <Button Text="Send Name to WebView"
                Clicked="OnSendNameClicked" />
    </StackLayout>
</ContentPage>
